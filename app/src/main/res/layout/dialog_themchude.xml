<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:elevation="5dp"
        android:paddingStart="5dp"
        android:text="moi ban tai anh len"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/img_btn_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/textcolor"
            android:src="@drawable/btn_camera"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:elevation="1dp"/>

        <ImageButton
            android:id="@+id/img_btn_dowloat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/img_btn_camera"
            android:background="@color/textcolor"
            android:src="@drawable/btn_photo"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:elevation="1dp"/>

        <ImageView
            android:id="@+id/img_theme"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/asas_as" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_name_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:text="nhap ten chu de"
            android:textColor="@color/textcolor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_name_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_topic"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name_theme"
            android:text="no" />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name_theme"
            android:layout_alignParentEnd="true"
            android:text="yes" />
    </RelativeLayout>

</LinearLayout>