<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginTop="15dp"
    android:background="#ffffffff"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/anh_be"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/ten_chu_de"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/anh_be"
        android:textColor="#D7000000"
        android:paddingStart="10dp"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:text="Chu De"
        android:layout_toStartOf="@id/menu_chude" />

    <TextView
        android:id="@+id/noi_dung_chinh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:layout_below="@id/ten_chu_de"
        android:layout_toStartOf="@id/menu_chude"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/menu_chude"
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="8"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/chia_se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/anh_be"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_share" />
</RelativeLayout>